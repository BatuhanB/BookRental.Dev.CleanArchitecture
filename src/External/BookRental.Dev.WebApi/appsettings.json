{
  "ConnectionStrings": {
    //"DefaultConnection": "Host=bookrental.dev.database;Port=5436;Database=bookrentaldev;User ID=postgres;Password=postgres123;Connection Lifetime=0"
    "DefaultConnection": "Host=localhost;Port=5433;Database=bookrentaldev;User ID=postgres;Password=postgres;",
    "RedisConnection": "localhost:1200"
  },
  "RedisSettings": {
    "Host": "localhost",
    "Port": 1200,
    "ExpirationTime": 30,
    "SlidingExpirationTime": 15
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {SourceContext} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.SystemConsoleTheme::Grayscale, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.json",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}/{ThreadName}) {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
